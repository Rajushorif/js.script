 // do-while number guessing game !
 var secretNumber;
 var guessNumber;
 do {
  secretNumber = Math.floor(Math.random() * 10) + 1;
  guessNumber = parseInt(prompt("You have to choose number bewteen 1 to 10"));
  if (secretNumber  === guessNumber) {
    confirm("Congratualation! You guess correct number.🏆🏆");
    console.log("Congratualation!You guess correct number.");
  } else {    
    console.log("Wrong guess! You have to choose a number between 1 to 10")
  }
 } while (secretNumber !== guessNumber);
console.log("GAME OVER");
confirm("GAME OVER👦");